<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Zip Code (5-digit)"
            android:id="@+id/label_zip_code"
            android:layout_gravity="left|center_vertical"/>

    <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_zip_code"
            android:layout_gravity="center|left"
            android:inputType="number"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Current Weather"
            android:id="@+id/button_display_current_weather"
            android:layout_gravity="left|center_vertical"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/view_current_weather"
            android:layout_gravity="left|center_vertical"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_current_weather"
            android:layout_gravity="center"/>


</LinearLayout>